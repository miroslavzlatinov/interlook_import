{% extends 'base.html.twig' %}

{% block title %}interlook Web Searches{% endblock %}
{% block stylesheets %}
    {{ parent() }}


{% endblock %}
{% block body %}
    <div class="container " style="width:100%">
        {% include 'dashboard/menu.html.twig' with {'name':'Interlook web Partner Searches'} %}
        <div class="row">
            <div class="col-4">
                {{ form_start(form) }}

                {{ form_widget(form.date_from) }}
                {{ form_widget(form.date_to) }}
                {{ form_rest(form) }}
            </div>
            <div class="col-3">
                <input type="submit" class="btn btn-info" value="Search"/>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="row">
            {#<div class="col-sm-2">#}


                <table id="example" class="table table-striped table-bordered  display" style="width:100%" >

                    <thead>
                    <tr>
                        <th scope="col">name</th>
                        {% for cell in head %}

                            <th scope="col">{{ cell }}</th>
                        {% endfor %}

                    </tr>
                    </thead>

                    <tbody>

                    {% for pname ,row in table %}
                        <tr>
                            <td scope="col">{{ pname }}</td>
                            {% for key , full in row %}
                                <td scope="col" data-order="{{full}}">{{ full }}</td>


                            {% endfor %}


                        </tr>
                    {% endfor %}

                    </tbody>
                </table>

            </div>
        {#</div>#}
    </div>

{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {#<script>#}
    {#$(document).ready(function () {#}
    {#$('#example').DataTable();#}
    {#});#}

    {#</script>#}
    <script>
        $(document).ready(function () {
            $('#example').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ]
            });
        });
    </script>
{% endblock %}

